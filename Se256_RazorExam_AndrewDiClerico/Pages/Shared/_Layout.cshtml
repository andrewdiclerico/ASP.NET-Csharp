<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cemetary Plot</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        body {
            background-color: #1A1A1D;
            color:#C3073F;
        }
        div{
            background-color: #4E4E50;
        }
        a{
            color:#C3073F;
        }
        a:hover{
            color:white;
        }
        nav{
            color:silver;
        }
        table{
            background-color:gainsboro;
        }
        tbody{
            color:black;
        }
        .navspc{
            padding-left:10px;
            padding-right:10px;
            font-size:24px;
        }
        h1{
            color:#C3073F;
        }
        h2{
            color:#C3073F;
        }
        .lnk {
            color:#C3073F;
        }
        .lnk:hover{
            color:white;
        }
        button{
            color:#c3073F;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navspc" asp-area="" asp-page="/Index">Six Below Cemetary</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item navspc">
                            <a asp-area="" asp-page="/AddPlot">Post Plot   </a>
                        </li>
                        <li class="nav-item navspc">
                            <a asp-area="" asp-page="/Admin/Index">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <br />

    <footer class="border-top footer text-muted">
        <div class="container" style="margin-top:10px; margin-bottom:10;">
            &copy; 2022 - Se256_RazorExam_AndrewDiClerico - <a asp-area="" asp-page="/About">About Us</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
