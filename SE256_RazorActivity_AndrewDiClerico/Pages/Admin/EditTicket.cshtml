@page
@model SE256_RazorActivity_AndrewDiClerico.Pages.Admin.EditTicketModel
@{
    ViewData["Title"] = "Edit Ticket";
}

<div style="background-color:white; padding-right:10%; padding-left:10%;">

    <h1 class="display-4" style="text-align:center;">Edit Ticket</h1>

    <form method="post" style="text-align: center;">

        <div class="form-group">
            <label asp-for="tTicket.Ticket_Title">Ticket Title</label>
            <input asp-for="tTicket.Ticket_Title" type="text" class="form-control" placeholder="Brief Descriptive Title" />
            <span asp-validation-for="tTicket.Ticket_Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="tTicket.Ticket_Desc">Ticket Description</label>
            <input asp-for="tTicket.Ticket_Desc" type="text" class="form-control" placeholder="Description of Problem" />
            <span asp-validation-for="tTicket.Ticket_Desc" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="tTicket.Category">Category</label>
            <input asp-for="tTicket.Category" type="text" class="form-control" placeholder="Category" />
            <span asp-validation-for="tTicket.Category" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="tTicket.Reporting_Email">Reporting Email</label>
            <input asp-for="tTicket.Reporting_Email" type="text" class="form-control" placeholder="Reporting Email" />
            <span asp-validation-for="tTicket.Reporting_Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="tTicket.Orig_Date">Original date of the problem</label>
            <input asp-for="tTicket.Orig_Date" type="text" class="form-control" />
            <span asp-validation-for="tTicket.Orig_Date" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="tTicket.Responder_Email">Responder Email</label>
            <input asp-for="tTicket.Responder_Email" type="text" class="form-control" placeholder="Responder Email" />
            <span asp-validation-for="tTicket.Responder_Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="tTicket.Responder_Notes">Responder Notes</label>
            <input asp-for="tTicket.Responder_Notes" type="text" class="form-control" placeholder="Responder Notes" />
            <span asp-validation-for="tTicket.Responder_Notes" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="tTicket.Active">Active</label>
            <select asp-for="tTicket.Active" class="form-control">
                <option value="">-- Select Status --</option>
                <option value="false">Closed</option>
                <option value="true">Active</option>
            </select>
            <span asp-validation-for="tTicket.Active" class="text-danger"></span>
        </div>

        <br />

        <input asp-for="tTicket.Ticket_ID" type="hidden" class="form-control" />

        <button type="submit" class="btn btn-primary">Update</button>

        <br />
        <br />

    </form>

</div>

<script src="/lib/jquery/dist/jquery.min.js"></script>
<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

@{ 
    if (Model.tTicket != null && Model.tTicket.Feedback != null)
    {
        <h1>Results</h1>
        <p>@Model.tTicket.Feedback</p>
    }
}